<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comparison</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
        }

        .comparison-card {
            border-radius: 8px;
            padding: 20px;
            max-width: 1200px;
            margin: auto;
        }

        .comparison-section {
            display: flex;
            align-items: flex-start;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .imageMorden, .imageAncient {
            width: 48%; /* Adjusted for better responsiveness */
            max-width: 400px;
            flex: 1;
            margin-bottom: 20px;
        }

        .comparison-section img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .imageMorden img, .imageAncientWork img, .imageMordenWork img {
            max-width: 100%;
            height: auto;
            margin-bottom: 20px;
        }

        .text {
            flex: 1;
            margin-left: 20px;
            width: 100%;
        }

        .comparison-section h2, .comparison-section h3 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #333;
        }

        .comparison-section p {
            font-size: 18px;
            line-height: 1.8;
            margin: 15px 0;
            color: #555;
        }

        h1, h2, h3 {
            text-align: center;
        }

        .comment-section {
            margin-top: 20px;
        }

        .comment-section textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .comment-section button {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }

        .comment-section button:hover {
            background-color: #0056b3;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .comparison-section {
                flex-direction: column;
                align-items: center;
            }

            .imageMorden, .imageAncient {
                width: 100%;
                max-width: 100%; /* Ensures full width on smaller screens */
            }

            .text {
                margin-left: 0;
                width: 100%;
                text-align: center;
            }

            .comparison-section img {
                width: 100%;
                margin-bottom: 10px;
            }
        }

        /* For even smaller screens */
        @media (max-width: 576px) {
            body {
                padding: 10px;
            }

            .comparison-card {
                padding: 10px;
            }

            .comparison-section h2, .comparison-section h3 {
                font-size: 20px;
            }

            .comparison-section p {
                font-size: 16px;
            }
        }
    </style>
</head>
<body>
    <div class="comparison-card">
        <h1 class="title">
            <%= Comparison.mordenVSancient %>
        </h1>

        <!-- Modern Field Section -->
        <div class="comparison-section">
            <div class="imageMorden">
                <img src="<%= Comparison.mordenImage %>" alt="Modern Field Image">
            </div>
            <div class="text">
               <h2>Modern Field</h2> 
                <p><%= Comparison.mordenField %></p>
            </div>
        </div>

        <!-- Ancient Field Section -->
        <div class="comparison-section">
            <div class="text">
                <h2>Ancient Field</h2>
                <p><%= Comparison.ancientField %></p>
                <p><%= Comparison.ancientDescription %></p>
            </div>
            <div class="imageAncient">
                <img src="<%= Comparison.ancientImage %>" alt="Ancient Field Image">
            </div>
        </div>

        <!-- Modern Working Model Section -->
        <div class="comparison-section">
            <div class="imageMordenWork">
                <h3>Modern Working Model</h3>
                <img src="<%= Comparison.mordenWorkingImage %>" alt="Modern Working Model Image">
            </div>
            <div class="text">
                <p><%= Comparison.mordenWorkingModel %></p>
            </div>
        </div>

        <!-- Ancient Working Model Section -->
        <div class="comparison-section">
            <div class="imageAncientWork">
                <h3>Ancient Working Model</h3>
                <img src="<%= Comparison.ancientWorkingImage %>" alt="Ancient Working Model Image">
            </div>
            <div class="text">
                <p><%= Comparison.ancientWorkingModel %></p>
            </div>
        </div>

        <!-- Image Comparison Section -->
        <div class="comparison-section">
            <h2>Modern Field VS Ancient Field</h2>
            <div class="comare">
                <img src="<%= Comparison.camparisonImage %>" alt="Comparison Image">
            </div>
        </div>

        <!-- Comparison Text -->
        <div class="comparison-section">
            <div class="text">
                <h3>Comparison</h3>
                <p><%= Comparison.compareText %></p>
            </div>
        </div>

        <!-- Summary Section -->
        <div class="comparison-section">
            <div class="text">
                <h3>Summary</h3>
                <p><%= Comparison.summary %></p>
            </div>
        </div>
    </div>

    <!-- Comment Section -->
    <div class="comment-section">
        <form action="/api/comparisons/<%= Comparison._id %>/comment" method="POST">
            <textarea id="commentText" name="commentText" rows="4" cols="50"></textarea>
            <button type="submit">Post Comment</button>
        </form>

        <h3>Comments</h3>
        <% comments.forEach(comment => { %>
            <p><strong><%= comment.owner.fullname %>:</strong> <%= comment.commentText %></p>
        <% }); %>
    </div>
</body>
</html>
