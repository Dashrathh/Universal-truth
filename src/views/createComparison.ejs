<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comparison</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
            margin: 0;
            padding: 20px;
        }

        .comparison-card {
            border-radius: 8px;
            padding: 20px;
            /* margin-bottom: 20px; */
            /* box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); */
        }

        .comparison-section {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 20px;
        }

        .comparison-section img {
            width: 100%;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .imageComparison{
            justify-content: center;
             /* padding-left: 300px; */
             /* width: 000px; */
             width: 400px;
        }
        .imageMorden img{
            width: 300px;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .imageAncientWork img {
            width: 640px;
            height: auto;
            margin-bottom: 500px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .imageMordenWork img {
            width: 640px;
            height: auto;
            margin-bottom: 500px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .comparison-section .text {
            flex: 1;
            margin-left: 20px;
        }
        .mordenworking{
            margin-left: 20px;
        
        }
        .comparison-section .image {
        
            width: 500px;
        }

        .comparison-section h3 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #333;
        }

        .comparison-section p {
            font-size: 18px; /* Increased font size for better readability */
            line-height: 1.8; /* Increased line height for better spacing */
            margin: 15px 0; /* Adjusted margin for better spacing */
            color: #555;
        }

        .comment-section {
            margin-top: 20px;
        }

        .comment-section form {
            margin-bottom: 20px;
        }

        .comment-section textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .comment-section button {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }

        .comment-section button:hover {
            background-color: #0056b3;
        }

        .comment-section h3 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #333;
        }

        .comment-section p {
            font-size: 16px;
            line-height: 1.5;
            color: #555;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #007BFF;
        }
    </style>
</head>
<body>
    <div class="comparison-card">
        <h1 class="title">
            <%= Comparison.mordenVSancient %>
        </h1>

        <div class="comparison-section">
            <div class="imageMorden">
                <img src="<%= Comparison.mordenImage %>" alt="Modern Field Image">
            </div>
            <div class="text">
               <h2>Modern Field</h2> 
                <p><%= Comparison.mordenField %></p>
                <p><%= Comparison.mordenDescription %></p>
            </div>
        </div>

        <div class="comparison-section">
            <div class="text">
                <h2>Ancient Field</h2>
                <p> <%= Comparison.ancientField %></p>
                <p><%= Comparison.ancientDescription %></p>
            </div>
            <div class="image">
                <img src="<%= Comparison.ancientImage %>" alt="Ancient Field Image">
            </div>
        </div>
        
        <div class="comparison-section">
            <div class="imageMordenWork">
                <img src="<%= Comparison.mordenWorkingImage %>" alt="Modern Working Model Image">
            </div>
            <div class="mordenworking">
                <h3>Modern Working Model</h3>
                <p><%= Comparison.mordenWorkingModel %></p>
            </div>
        </div>
        
        <div class="comparison-section">
            <div class="imageAncientWork">
                <img src="<%= Comparison.ancientWorkingImage %>" alt="Ancient Working Model Image">
            </div>
            <div class="text">
                <h3>Ancient Working Model</h3>
                <p><%= Comparison.ancientWorkingModel %></p>
            </div>
        </div>
        <div class="imageComparison">
            <h2>MordenField VS AncientField</h2>
            <img src="<%= Comparison.camparisonImage %>" alt="Ancient Working Model Image">
        </div>
        
        <div class="comparison-section">
            <div class="text">
                <h3>Comparison</h3>
                <p><%= Comparison.compareText %></p>
            </div>
        </div>
        
        <div class="comparison-section">
            <div class="text">
                <h3>Summary</h3>
                <p><%= Comparison.summary %></p>
            </div>
        </div>
    </div>

    <div class="comment-section">
        <form action="/api/comparisons/<%= Comparison._id %>/comment" method="POST">
            <textarea id="commentText" name="commentText" rows="4" cols="50"></textarea>
            <button type="submit">Post Comment</button>
        </form>

        <h3>Comments</h3>
        <% comments.forEach(comment => { %>
            <p><strong><%= comment.owner.fullname %>:</strong> <%= comment.commentText %></p>
        <% }); %>
    </div>
</body>
</html> 