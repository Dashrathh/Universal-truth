<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comparison</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            /* background-color: #f4f4f4; */
            margin: 0;
            padding: 20px;
        }

        .comparison-card {
            /* border: 1px solid #ccc; */
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            /* background-color: #fff; */
            /* box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); */
        }

        .comparison-section {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .comparison-section .text {
            flex: 2;
        }

      image {
            /* flex: 1; */
            /* text-align: right; */
            width: 100px;
        }

        .comparison-section h3 {
            font-size: 20px;
            margin-bottom: 10px;
            display: flex;
            justify-content: center;
        }

        .comparison-section p {
            font-size: 16px;
            line-height: 1.5;
        }

        .comparison-section img {
           width:300px;
            height: auto;
            /* display: block; */
            /* margin-left: 10px; */
        }

        .comment-section {
            margin-top: 20px;
        }

        .comment-section form {
            margin-bottom: 20px;
        }

        .comment-section textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .comment-section button {
            background-color: #007BFF;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
        }

        .comment-section button:hover {
            background-color: #0056b3;
        }

        .comment-section h3 {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .comment-section p {
            font-size: 16px;
            line-height: 1.5;
        }
        h1{
          display: flex;
          justify-content:center;
          align-items: center;
        }
    </style>
</head>

<body>
    <div class="comparison-card">
        <h1 class="title">
            <%= Comparison.mordenVSancient %>
        </h1>

        <div class="comparison-section">
            <div class="text">
                <h3>
                    <%= Comparison.mordenField %>
                </h3>
            </div>
            <div class="image">
                <img src="<%= Comparison.mordenImage %>" alt="Modern Field Image">
            </div>
        </div>

        <div class="comparison-section">
            <div class="text">
                <h3>Ancient Field: <%= Comparison.ancientField %>
                </h3>
            </div>
            <div class="image">
                <img src="<%= Comparison.ancientImage %>" alt="Ancient Field Image">
            </div>
        </div>

        <div class="comparison-section">
            <div class="text">
                <h3>Modern Working Model</h3>
                <p>
                    <%= Comparison.mordenWorkingModel %>
                </p>
            </div>
            <div class="image">
                <img src="<%= Comparison.mordenWorkingImage %>" alt="Modern Working Model Image">
            </div>
        </div>

        <div class="comparison-section">
            <div class="text">
                <h3>Ancient Working Model</h3>
                <p>
                    <%= Comparison.ancientWorkingModel %>
                </p>
            </div>

            <div class="image">
                <img src="<%= Comparison.ancientWorkingImage %>" alt="Ancient Working Model Image">
            </div>
        </div>

        <div class="comparison-section">
            <div class="text">
                <h3>Comparison</h3>
                <p>
                    <%= Comparison.compareText %>
                </p>
            </div>
        </div>

        <div class="comparison-section">
            <div class="text">
                <h3>Summary</h3>
                <p>
                    <%= Comparison.summary %>
                </p>
            </div>
        </div>
    </div>

    <div class="comment-section">
        <form action="/api/comparisons/<%= Comparison._id %>/comment" method="POST">
            <textarea id="commentText" name="commentText" rows="4" cols="50"></textarea>
            <button type="submit">Post Comment</button>
        </form>

        <h3>Comments</h3>
        <% comments.forEach(comment=> { %>
            <p><strong>
                    <%= comment.owner.fullname %>:
                </strong>
                <%= comment.commentText %>
            </p>
            <% }); %>
    </div>
</body>

</html>