<footer>
    <!-- JavaScript for Section 1 Card Slider -->
    <script>
        // Section 1 card slider functionality
        let scrollbar = document.querySelector('.compare-wrapper');
        let leftButton = document.getElementById("left-btn");
        let rightButton = document.getElementById("right-btn");

        // Wheel event to scroll horizontally
        scrollbar.addEventListener("wheel", (evt) => {
            evt.preventDefault();
            scrollbar.scrollLeft += evt.deltaY;  // Use deltaY for vertical scroll
            console.log("Wheel event triggered");
        });

        // Left button click event
        leftButton.addEventListener('click', () => {
            scrollbar.style.scrollBehavior = "smooth";
            scrollbar.scrollLeft -= 700;
        });

        // Right button click event
        rightButton.addEventListener('click', () => {
            scrollbar.style.scrollBehavior = "smooth";
            scrollbar.scrollLeft += 700;
        });

        // Another swiper container
        let scrollContainer = document.querySelector(".h-swiper-wrapper");
        let leftbtn = document.getElementById("left-btn2");
        let rightbtn = document.getElementById("right-btn2");

        // Scroll container wheel event
        scrollContainer.addEventListener("wheel", (evt) => {
            evt.preventDefault();
            scrollContainer.scrollLeft += evt.deltaY;
        });

        // Right button for second container
        rightbtn.addEventListener("click", () => {
            scrollContainer.style.scrollBehavior = "smooth";
            scrollContainer.scrollLeft += 700;
        });

        // Left button for second container
        leftbtn.addEventListener("click", () => {
            scrollContainer.style.scrollBehavior = "smooth";
            scrollContainer.scrollLeft -= 700;
        });
    </script>

    <!-- Swiper JS Script -->
