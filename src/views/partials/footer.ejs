    <!-- JavaScript for Section 1 Card Slider -->
    <script>
        // Section 1 card slider functionality
        let scrollbar = document.querySelector('.compare-wrapper');
        let leftButton = document.getElementById("left-btn");
        let rightButton = document.getElementById("right-btn");

        // Wheel event to scroll horizontally
        scrollbar.addEventListener("wheel", (evt) => {
            evt.preventDefault();
            scrollbar.scrollLeft += evt.deltaY > 0 ? 100 : -100; // horizontal scroll by wheel
        });

        // Left button click event
        leftButton.addEventListener('click', () => {
            scrollbar.style.scrollBehavior = "smooth";
            scrollbar.scrollLeft -= 700;
        });

        // Right button click event
        rightButton.addEventListener('click', () => {
            scrollbar.style.scrollBehavior = "smooth";
            scrollbar.scrollLeft += 700;
        });

        // Handle mobile swipe events
        let isDown = false;
        let startX, scrollLeft;

        scrollbar.addEventListener('touchstart', (e) => {
            isDown = true;
            scrollbar.style.scrollBehavior = "auto"; // Disable smooth scroll for better swipe control
            startX = e.touches[0].pageX - scrollbar.offsetLeft;
            scrollLeft = scrollbar.scrollLeft;
        });

        scrollbar.addEventListener('touchmove', (e) => {
            if (!isDown) return;
            const x = e.touches[0].pageX - scrollbar.offsetLeft;
            const walk = (x - startX); // Adjust swipe sensitivity
            scrollbar.scrollLeft = scrollLeft - walk;
        });

        scrollbar.addEventListener('touchend', () => {
            isDown = false;
        });

        // Another swiper container
        let scrollContainer = document.querySelector(".h-swiper-wrapper");
        let leftbtn = document.getElementById("left-btn2");
        let rightbtn = document.getElementById("right-btn2");

        // Right button for second container
        rightbtn.addEventListener("click", () => {
            scrollContainer.style.scrollBehavior = "smooth";
            scrollContainer.scrollLeft += 700;
        });

        // Left button for second container
        leftbtn.addEventListener("click", () => {
            scrollContainer.style.scrollBehavior = "smooth";
            scrollContainer.scrollLeft -= 700;
        });

        // Swipe functionality for second swiper
        let isDownSwiper = false;
        let startXSwiper, scrollLeftSwiper;

        scrollContainer.addEventListener('touchstart', (e) => {
            isDownSwiper = true;
            scrollContainer.style.scrollBehavior = "auto"; // Disable smooth scroll for better swipe control
            startXSwiper = e.touches[0].pageX - scrollContainer.offsetLeft;
            scrollLeftSwiper = scrollContainer.scrollLeft;
        });

        scrollContainer.addEventListener('touchmove', (e) => {
            if (!isDownSwiper) return;
            const x = e.touches[0].pageX - scrollContainer.offsetLeft;
            const walk = (x - startXSwiper); // Adjust swipe sensitivity
            scrollContainer.scrollLeft = scrollLeftSwiper - walk;
        });

        scrollContainer.addEventListener('touchend', () => {
            isDownSwiper = false;
        });
    </script>

